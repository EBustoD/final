<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amvisa_fondo"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnScanner"
            android:layout_width="179dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="260dp"
            android:text="@string/btn_start_scan"
            app:backgroundTint="@color/amvisa" />

        <Button
            android:id="@+id/btnAlmacen"
            android:layout_width="179dp"
            android:layout_height="150dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="450dp"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_datos_almacen"
            app:backgroundTint="@color/amvisa"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="302dp"
            android:layout_height="209dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/fondo" />

        <ImageView
            android:id="@+id/orekaitLogo"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="550dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/orekait" />

        <Button
            android:id="@+id/btnIdioma"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:text="EU" />
    </RelativeLayout>
</ScrollView>